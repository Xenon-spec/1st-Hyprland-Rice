{
    "margin-top": 2,
    "margin-bottom": 0,   
    "margin-left": 1,
    "margin-right":1, 
    "height": 43,
    "spacing": 0,

    "modules-left": [
        "tray",
        "hyprland/workspaces",
        "custom/media"
